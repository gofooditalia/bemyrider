<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Stato pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#D97A15" />
            <corners android:radius="12dp" />
            <padding
                android:left="24dp"
                android:top="16dp"
                android:right="24dp"
                android:bottom="16dp" />
        </shape>
    </item>
    
    <!-- Stato normale -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#f08b18" />
            <corners android:radius="12dp" />
            <padding
                android:left="24dp"
                android:top="16dp"
                android:right="24dp"
                android:bottom="16dp" />
        </shape>
    </item>
</selector>

