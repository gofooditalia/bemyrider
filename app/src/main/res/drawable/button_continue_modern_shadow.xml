<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Ombra -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40000000" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Pulsante -->
    <item
        android:bottom="4dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <selector>
            <!-- Stato pressed -->
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="#D97A15" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            
            <!-- Stato normale -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#f08b18" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>

