<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/l_receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layout_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/_200sdp"
            android:layout_marginEnd="@dimen/_14sdp"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_toEndOf="@+id/img_receiver"
            android:background="@drawable/bg_msg_left"
            android:padding="@dimen/_14sdp">

            <TextView
                android:id="@+id/txt_receiver_name"
                style="@style/font_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/_200sdp"
                android:singleLine="true"
                android:textColor="@color/text"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/txt_receiver_msg"
                style="@style/font_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:maxWidth="@dimen/_200sdp"
                android:layout_below="@+id/txt_receiver_name"
                android:textColor="@color/text_light"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/txtUserAttachment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_light"
                android:drawableLeft="@drawable/ic_attach"
                android:drawableTint="@color/text_light"
                android:text="@string/view_attachment"
                android:gravity="center_vertical"
                android:layout_below="@+id/txt_receiver_msg"
                android:layout_marginTop="6dp"
                android:visibility="gone"
                android:maxWidth="@dimen/_200sdp"
                android:textSize="@dimen/_11ssp" />


        </RelativeLayout>

        <com.app.bemyrider.utils.CircleImageView
            android:id="@+id/img_receiver"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/_3sdp"/>

        <TextView
            android:id="@+id/txt_datetime_receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_toEndOf="@+id/img_receiver"
            android:layout_below="@+id/layout_right"
            style="@style/font_light"
            android:gravity="start"
            android:maxWidth="@dimen/_200sdp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_14sdp"
            android:textColor="@color/text_light"
            android:textSize="@dimen/_10ssp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/l_sender"
        android:layout_below="@+id/l_receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layout_left1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/_200sdp"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:padding="@dimen/_14sdp"
            android:layout_toStartOf="@+id/img_sender"
            android:background="@drawable/bg_msg_right">

            <TextView
                style="@style/font_regular"
                android:id="@+id/txt_sender_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:maxWidth="@dimen/_200sdp"
                android:textColor="@color/text"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/txt_sender_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_sender_name"
                android:layout_marginTop="6dp"
                android:maxWidth="@dimen/_200sdp"
                android:textColor="@color/text_light"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/txtAttachment"
                style="@style/font_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_sender_msg"
                android:layout_marginTop="6dp"
                android:maxWidth="@dimen/_200sdp"
                android:drawableLeft="@drawable/ic_attach"
                android:drawableTint="@color/text_light"
                android:gravity="center_vertical"
                android:text="@string/view_attachment"
                android:textSize="@dimen/_11ssp"
                android:visibility="gone" />


        </RelativeLayout>

        <com.app.bemyrider.utils.CircleImageView
            android:id="@+id/img_sender"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_7sdp" />

        <TextView
            android:id="@+id/txt_datetime_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_left1"
            android:layout_toStartOf="@+id/img_sender"
            android:maxWidth="@dimen/_200sdp"
            style="@style/font_light"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:layout_marginStart="@dimen/_45sdp"
            android:textColor="@color/text_light"
            android:textSize="@dimen/_10ssp" />

    </RelativeLayout>

</RelativeLayout>
