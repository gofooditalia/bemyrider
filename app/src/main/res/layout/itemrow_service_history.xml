<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_14sdp">

        <com.app.bemyrider.utils.CircleImageView
            android:id="@+id/imgProfile"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_3sdp"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_toEndOf="@+id/imgProfile">

            <RelativeLayout
                android:id="@+id/layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtProviderName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/font_medium"
                    android:layout_marginEnd="2dp"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/txtCost"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/txtCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="2dp"
                    android:textColor="@color/button"
                    android:textSize="@dimen/_12ssp"
                    style="@style/font_regular" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txtServiceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:maxLines="2"
                android:layout_marginTop="@dimen/_2sdp"
                android:ellipsize="end"
                style="@style/font_light"
                android:layout_below="@+id/layout_name"
                android:textColor="@color/text_light"
                android:textSize="@dimen/_11ssp" />

            <RelativeLayout
                android:id="@+id/layout_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_below="@+id/layout_subject">

                <TextView
                    android:id="@+id/txtDateTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:textSize="@dimen/_11ssp"
                    style="@style/font_light"
                    android:textColor="@color/text_light"/>

                <TextView
                    android:id="@+id/txtStatus"
                    style="@style/font_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="4dp"
                    android:paddingStart="@dimen/_4sdp"
                    android:paddingTop="@dimen/_1sdp"
                    android:paddingEnd="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_1sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11ssp" />

            </RelativeLayout>



        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/layout_item"
        android:background="@color/edit_border_color" />

</RelativeLayout>
