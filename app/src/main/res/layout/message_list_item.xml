<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_message_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_12sdp">

        <com.app.bemyrider.utils.CircleImageView
            android:id="@+id/img_provider_image"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_6sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_toEndOf="@+id/img_provider_image"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_provider_name"
                    style="@style/font_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_toStartOf="@+id/txt_time"
                    android:singleLine="true"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/txt_time"
                    style="@style/font_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:maxWidth="@dimen/_100sdp"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:gravity="end|center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/text_light"
                    android:textSize="@dimen/_10ssp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_service_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                style="@style/font_light"
                android:textColor="@color/text"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/txt_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/font_light"
                android:textColor="@color/text"
                android:textSize="@dimen/_11ssp"/>

        </LinearLayout>

        <!--<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_remove"
                android:layout_width="20dp"
                android:layout_gravity="right|end"
                android:src="@mipmap/ic_delete_orange"
                android:layout_height="20dp" />
        </LinearLayout>-->

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/edit_border_color" />
</LinearLayout>
