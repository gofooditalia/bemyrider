<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/activity_service_detail_"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rlMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/relDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_14sdp"
                android:paddingTop="@dimen/_14sdp"
                android:paddingEnd="@dimen/_14sdp"
                android:paddingBottom="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_80sdp"> <!-- Margine rigido per compensare Action Bar e Status Bar -->

                <com.app.bemyrider.utils.CircleImageView
                    android:id="@+id/img_user__profile"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp" />

                <RelativeLayout
                    android:id="@+id/layout_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:layout_toEndOf="@+id/img_user__profile"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_user__Name"
                        style="@style/font_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@id/txt_service_status"
                        android:textColor="@color/text"
                        android:textSize="@dimen/_13ssp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_service_status"
                        style="@style/font_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="4dp"
                        android:paddingStart="@dimen/_4sdp"
                        android:paddingTop="@dimen/_1sdp"
                        android:paddingEnd="@dimen/_4sdp"
                        android:paddingBottom="@dimen/_1sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11ssp" />

                    <!-- Aggiungo l'elemento send message per allineare al Java -->
                     <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/layout_send_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_user__Name"
                        android:orientation="horizontal">
                         <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_send_message"
                            style="@style/font_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/send_msg"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_11ssp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                </RelativeLayout>

                 <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layout_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_user__profile"
                    android:orientation="vertical"
                    android:visibility="gone">
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layout_raise_dispute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">
                </androidx.appcompat.widget.LinearLayoutCompat>

            </RelativeLayout>

            <include
                android:id="@+id/include_request_detail"
                layout="@layout/partner_servicerequest_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/linBottomWrapper"
                android:layout_below="@+id/relDetail" />

            <!-- Nuovo Wrapper per il pulsante Modifica Richiesta -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linBottomWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linBottom"
                android:orientation="vertical">

                 <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_send_proposal"
                    style="@style/font_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:layout_marginBottom="@dimen/_13sdp"
                    android:background="@drawable/button_style_filltype_two"
                    android:text="@string/send_proposal"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13ssp"
                    android:visibility="visible" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_note"
                    style="@style/font_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:text="@string/msg_note_for_provider"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_11ssp"
                    android:visibility="visible" />

                <View
                    android:id="@+id/view_line_one"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/relDetail"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:background="@color/black"
                    android:visibility="invisible" />

                <View
                    android:id="@+id/view_line_two"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/view_line_one"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:background="@color/black"
                    android:visibility="invisible" />

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_13sdp"
                android:layout_marginEnd="@dimen/_13sdp"
                android:layout_marginBottom="@dimen/_45sdp"
                android:orientation="horizontal">

                <!-- Layout pulsante ACCETTA (per il codice Java) -->
                <RelativeLayout
                    android:id="@+id/ll_btn_accept"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/button_style_filltype_two"
                    android:visibility="visible">

                    <ProgressBar
                        android:id="@+id/pg_accept"
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/_2sdp"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingEnd="0dp"
                        android:indeterminateDrawable="@drawable/custom_progress_bar"
                        android:visibility="gone" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_accept"
                        style="@style/font_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:text="@string/accept"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13ssp"
                        android:visibility="visible" />
                </RelativeLayout>

                <!-- Layout pulsante RIFIUTA (per il codice Java) -->
                <RelativeLayout
                    android:id="@+id/ll_btn_reject"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/button_style_filltype"
                    android:visibility="visible">

                    <ProgressBar
                        android:id="@+id/pg_reject"
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/_2sdp"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingEnd="0dp"
                        android:indeterminateDrawable="@drawable/custom_progress_bar"
                        android:visibility="gone" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_reject"
                        style="@style/font_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:text="@string/reject"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/button"
                        android:textSize="@dimen/_13ssp"
                        android:visibility="visible" />
                </RelativeLayout>

                <!-- Layout Download Invoice -->
                <RelativeLayout
                    android:id="@+id/llDownloadInvoice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:background="@drawable/button_style_filltype_two"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ProgressBar
                        android:id="@+id/pgDownloadInvoice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end"
                        android:padding="@dimen/_2sdp"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingEnd="0dp"
                        android:indeterminateDrawable="@drawable/custom_progress_bar"
                        android:visibility="gone" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_download_invoice_completed"
                        style="@style/font_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:text="@string/download_invoice"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13ssp"
                        android:visibility="visible" />

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_cancel"
                    style="@style/font_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:background="@drawable/button_style_filltype_two"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13ssp"
                    android:visibility="gone" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_tab_dispute"
                    style="@style/font_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:background="@drawable/button_style_filltype_two"
                    android:text="@string/view_dispute"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13ssp"
                    android:visibility="gone" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_tab_endservice"
                    style="@style/font_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:background="@drawable/button_style_filltype_two"
                    android:text="@string/end_service"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13ssp"
                    android:visibility="gone" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/custom_progress_bar"
            android:visibility="gone" />

    </RelativeLayout>

</layout>