<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_review"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_13sdp">

        <com.app.bemyrider.utils.CircleImageView
            android:id="@+id/imgProvider"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_3sdp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_3sdp"
            android:layout_toStartOf="@id/txtRate"
            android:layout_toEndOf="@+id/imgProvider"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtName"
                style="@style/font_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/txt_date"
                android:textColor="@color/text"
                android:textSize="@dimen/_12ssp" />

            <RelativeLayout
                android:id="@+id/layout_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_subject"
                android:layout_marginTop="@dimen/_3sdp">

                <ImageView
                    android:id="@+id/Img_rate"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@mipmap/ic_star_yellow"
                    app:tint="@color/icon_color" />

                <TextView
                    android:id="@+id/txtRateCount"
                    style="@style/font_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_toEndOf="@+id/Img_rate"
                    android:textColor="@color/text_light"
                    android:textSize="@dimen/_10ssp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txtAddress"
                style="@style/font_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/_3sdp"
                android:maxLines="2"
                android:textColor="@color/text_light"
                android:textSize="@dimen/_11ssp" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:id="@+id/txtRate"
            style="@style/font_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="0$/h"
            android:textColor="@color/text"
            android:textSize="@dimen/_13ssp" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/relDetail"
        android:background="@color/edit_border_color" />

</RelativeLayout>


