<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rowdata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_12sdp">

        <com.app.bemyrider.utils.CircleImageView
            android:id="@+id/img_service"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_3sdp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_toEndOf="@+id/img_service"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_service_name"
                style="@style/font_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/txt_serviceprice"
                android:layout_weight="1"
                android:textColor="@color/text"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/txt_sub_categoty"
                style="@style/font_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_light"
                android:layout_marginTop="3dp"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/txt_dur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/font_light"
                android:layout_marginTop="3dp"
                android:textColor="@color/text_light"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/txt_service_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/font_regular"
                android:layout_marginTop="3dp"
                android:textColor="@color/button"
                android:textSize="@dimen/_12ssp" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/edit_border_color" />

</androidx.appcompat.widget.LinearLayoutCompat>