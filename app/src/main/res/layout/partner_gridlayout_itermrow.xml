<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp">

        <com.app.bemyrider.utils.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/gray_light"
            app:border_color="@color/gray_light"
            app:border_width="2dp" />

        <com.app.bemyrider.utils.CircleImageView
            android:id="@+id/Img_photos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:border_color="@color/white"
            app:border_width="4dp"
            android:layout_margin="2dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_imageremove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <ProgressBar
            android:id="@+id/pgDelete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/Img_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:background="@drawable/ic_red_remove"
            android:scaleType="centerCrop" />

    </RelativeLayout>

