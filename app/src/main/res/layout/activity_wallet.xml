<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:paddingTop="?attr/actionBarSize"
        android:paddingBottom="@dimen/_14sdp"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/_14sdp"
            android:paddingEnd="@dimen/_14sdp">

            <!--Layout TxtCredit-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_light_gray_bg">

                <RelativeLayout
                    android:id="@+id/relCredits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/rounded_light_gray_border_bg"
                    android:padding="@dimen/_8sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/Txt_CurBal"
                        style="@style/font_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:layout_toStartOf="@+id/llTxtShowCurBal"
                        android:text="@string/credits"
                        android:textColor="@color/text"
                        android:textSize="@dimen/_12ssp" />

                    <!--Layout TxtShowCurBal-->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llTxtShowCurBal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/pgShowCurBal"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:padding="@dimen/_2sdp"
                            android:visibility="gone" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/Txt_showCurBal"
                            style="@style/font_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/button"
                            android:textSize="@dimen/_12ssp" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/Txt_desc"
                    style="@style/font_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relCredits"
                    android:layout_margin="2dp"
                    android:background="@drawable/rounded_white_bg"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:textColor="@color/text_light"
                    android:text="@string/wallet_current_balance"
                    android:textSize="@dimen/_11ssp" />

            </RelativeLayout>

            <!--Layout TxtHold-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/rounded_light_gray_bg">

                <RelativeLayout
                    android:id="@+id/relHold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/rounded_light_gray_border_bg"
                    android:padding="@dimen/_8sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/Txt_Fund"
                        style="@style/font_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:layout_toStartOf="@+id/llTxtShowFund"
                        android:text="@string/hold"
                        android:textColor="@color/text"
                        android:textSize="@dimen/_12ssp" />

                    <!--Layout TxtShowFund-->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llTxtShowFund"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/pgShowFund"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:padding="@dimen/_2sdp"
                            android:visibility="gone" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/Txt_showFund"
                            style="@style/font_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/button"
                            android:textSize="@dimen/_12ssp" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </RelativeLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/Txt_desc2"
                    style="@style/font_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relHold"
                    android:layout_margin="2dp"
                    android:background="@drawable/rounded_white_bg"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:textColor="@color/text_light"
                    android:text="@string/wallet_fund_deposit"
                    android:textSize="@dimen/_11ssp" />

            </RelativeLayout>

            <!--Layout TxtRedeemRequest-->
            <RelativeLayout
                android:id="@+id/layout_redeem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/rounded_light_gray_bg">

                <RelativeLayout
                    android:id="@+id/relRedeemReq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/rounded_light_gray_border_bg"
                    android:padding="@dimen/_8sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/Txt_Reedem"
                        style="@style/font_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:layout_toStartOf="@+id/llTxtShowRedeemReq"
                        android:text="@string/redeem_request"
                        android:textColor="@color/text"
                        android:textSize="@dimen/_12ssp" />

                    <!--Layout TxtShowRedeemReq-->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llTxtShowRedeemReq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/pgShowRedeemReq"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:padding="@dimen/_2sdp"
                            android:visibility="gone" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/Txt_showReedemRequest"
                            style="@style/font_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/button"
                            android:textSize="@dimen/_12ssp" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/Txt_desc3"
                    style="@style/font_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relRedeemReq"
                    android:layout_margin="2dp"
                    android:background="@drawable/rounded_white_bg"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:textColor="@color/text_light"
                    android:text="@string/wallet_redeem_request"
                    android:textSize="@dimen/_11ssp" />

            </RelativeLayout>

            <!-- <View
                 android:id="@+id/view_redeem"
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:layout_marginTop="10dp"
                 android:background="@color/colorPrimaryDark" />-->

            <!--Layout Button Deposit Fun & Redeem Request-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_deposite"
                    style="@style/font_regular"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:background="@drawable/button_style_filltype_two"
                    android:text="@string/deposit_fund"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_13ssp" />

                <!--Layout Button Redeem Request-->
                <RelativeLayout
                    android:id="@+id/llBtnRedeem"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:background="@drawable/button_style_filltype_two"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:id="@+id/pgRedeem"
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:padding="@dimen/_2sdp"
                        android:theme="@style/WhiteAccent"
                        android:visibility="gone" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_reedem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:textAllCaps="false"
                        style="@style/font_regular"
                        android:background="@android:color/transparent"
                        android:text="@string/redeem_request"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13ssp" />

                </RelativeLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:id="@+id/view_sep"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@color/edit_border_color" />

        <!--Deposit Layout-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_deposit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_regular"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_8sdp"
                android:text="@string/deposit_history"
                android:textColor="@color/button"
                android:textSize="@dimen/_12ssp" />

            <View
                android:id="@+id/view_sep2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/edit_border_color" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_deposite_history"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:padding="@dimen/_7sdp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!--Redeem Layout-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_redeem_request"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_regular"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_8sdp"
                android:text="@string/redeem_request_history"
                android:textColor="@color/button"
                android:textSize="@dimen/_12ssp" />

            <View
                android:id="@+id/view_sep3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/edit_border_color" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_redeem_history"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:padding="@dimen/_7sdp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!--Progress Layout-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llProgress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>