<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_profile"
        android:layout_width="55dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/Img_profile"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/layout_profile"
        android:layout_toRightOf="@+id/layout_profile">


        <RelativeLayout
            android:id="@+id/layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Txt_sName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="4dp"
                android:layout_toStartOf="@+id/Img_status"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                android:layout_marginLeft="4dp"
                android:layout_toLeftOf="@+id/Img_status" />

            <ImageView
                android:id="@+id/Img_status"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="4dp"
                android:textColor="@color/text"
                android:layout_marginLeft="4dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_name"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp">

            <TextView
                android:id="@+id/Txt_SubjectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:lines="1"
                android:textColor="@color/text"
                android:textSize="@dimen/_12ssp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_subject">

            <TextView
                android:id="@+id/Txt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:textSize="@dimen/_12ssp"
                android:layout_marginLeft="4dp" />

            <TextView
                android:id="@+id/Txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/button"
                android:textSize="@dimen/_12ssp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/layout_price"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="12dp"
            android:background="@color/black"

            android:layout_marginLeft="5dp" />

    </RelativeLayout>

</RelativeLayout>
