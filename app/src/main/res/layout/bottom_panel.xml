<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/llMainBottomPanel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_margin="4dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:layout_toStartOf="@+id/llMessageSend"
            android:background="@drawable/rounded_light_gray_border_bg_two"
            android:padding="@dimen/_4sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_attach_files"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="6dp"
                android:src="@drawable/ic_add_files" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_message"
                style="@style/font_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:background="@color/transparent"
                android:hint="@string/type_messsage"
                android:inputType="textMultiLine"
                android:maxLines="4"
                android:minLines="1"
                android:textSize="@dimen/_12ssp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llMessageSend"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_38sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_3sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/Img_send"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:background="@drawable/button_style_filltype_two"
                android:padding="8dp"
                android:src="@drawable/ic_send"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/pgSend"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="bottom|center_vertical"
                android:layout_marginBottom="@dimen/_5sdp"
                android:padding="@dimen/_2sdp"
                android:visibility="gone" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </RelativeLayout>

</layout>